<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>xarql.com</display-name>
  <welcome-file-list>
    <welcome-file>/src/welcome/welcome.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <description></description>
    <display-name>Welcome</display-name>
    <servlet-name>Welcome</servlet-name>
    <servlet-class>com.xarql.Welcome</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>com.xarql.Welcome</servlet-name>
    <url-pattern>//*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>com.xarql.Welcome</servlet-name>
    <url-pattern></url-pattern>
  </servlet-mapping>
  <servlet>
    <display-name>Source</display-name>
    <servlet-name>Source</servlet-name>
    <servlet-class>com.xarql.Source</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>com.xarql.Source</servlet-name>
    <url-pattern>*.css</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>com.xarql.Source</servlet-name>
    <url-pattern>*.js</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>Error</display-name>
    <servlet-name>Error</servlet-name>
    <servlet-class>com.xarql.Error</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>com.xarql.Error</servlet-name>
    <url-pattern>/error</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>PathReader</display-name>
    <servlet-name>PathReader</servlet-name>
    <servlet-class>com.xarql.polr.PathReader</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>com.xarql.polr.PathReader</servlet-name>
    <url-pattern>/polr/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>Sends users to appropriate .jsp pages</description>
    <display-name>HelpDispatcher</display-name>
    <servlet-name>HelpDispatcher</servlet-name>
    <servlet-class>com.xarql.help.HelpDispatcher</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>com.xarql.help.HelpDispatcher</servlet-name>
    <url-pattern>/help/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>Jott it down</description>
    <display-name>Jott</display-name>
    <servlet-name>Jott</servlet-name>
    <servlet-class>com.xarql.jott.Jott</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>com.xarql.jott.Jott</servlet-name>
    <url-pattern>/jott</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>Jott with markdown</description>
    <display-name>JottMarkDown</display-name>
    <servlet-name>JottMarkDown</servlet-name>
    <servlet-class>com.xarql.jott.JottMarkDown</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>com.xarql.jott.JottMarkDown</servlet-name>
    <url-pattern>/jott/md</url-pattern>
  </servlet-mapping>
  <error-page>
    <error-code>429</error-code>
    <location>/error?code=429</location>
  </error-page>
  <error-page>
    <error-code>410</error-code>
    <location>/error?code=410</location>
  </error-page>
  <error-page>
    <error-code>405</error-code>
    <location>/error?code=405</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/error?code=404</location>
  </error-page>
  <error-page>
    <error-code>403</error-code>
    <location>/error?code=403</location>
  </error-page>
  <error-page>
    <error-code>401</error-code>
    <location>/error?code=401</location>
  </error-page>
  <error-page>
    <error-code>400</error-code>
    <location>/error?code=400</location>
  </error-page>
  <filter>
    <filter-name>ExpiresFilter</filter-name>
    <filter-class>org.apache.catalina.filters.ExpiresFilter</filter-class>
    <init-param>
      <param-name>ExpiresByType image</param-name>
      <param-value>access plus 1 day</param-value>
    </init-param>
    <init-param>
      <param-name>ExpiresDefault</param-name>
      <param-value>access plus 2 seconds</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>ExpiresFilter</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>
  <filter>
    <filter-name>SourceCache</filter-name>
    <filter-class>com.xarql.util.CacheController</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>SourceCache</filter-name>
    <url-pattern>/src/*</url-pattern>
  </filter-mapping>
</web-app>